generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String?
  password String?

  created_at DateTime  @default(now()) @db.Timestamptz(5)
  updated_at DateTime? @updatedAt @db.Timestamptz(5)
  deleted_at DateTime? @db.Timestamptz(5)

  @@map("user")
}

model Staff {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String

  created_at DateTime  @default(now()) @db.Timestamptz(5)
  updated_at DateTime? @updatedAt @db.Timestamptz(5)
  deleted_at DateTime? @db.Timestamptz(5)

  @@map("staff")
}

model Region {
  id          Int     @id @default(autoincrement())
  name        Json
  description Json
  image       String?

  cities  City[]
  tariffs Tariff[]

  created_at DateTime  @default(now()) @db.Timestamptz(5)
  updated_at DateTime? @updatedAt @db.Timestamptz(5)
  deleted_at DateTime? @db.Timestamptz(5)

  @@map("region")
}

model City {
  id          Int    @id @default(autoincrement())
  name        Json
  description Json
  region_id   Int
  region      Region @relation(fields: [region_id], references: [id])

  created_at DateTime  @default(now()) @db.Timestamptz(5)
  updated_at DateTime? @updatedAt @db.Timestamptz(5)
  deleted_at DateTime? @db.Timestamptz(5)

  @@map("city")
}

model Tariff {
  id          Int    @id @default(autoincrement())
  title       Json
  description Json
  region_id   Int
  region      Region @relation(fields: [region_id], references: [id])
  cost        String

  partner_id Int
  partner    Partner @relation(fields: [partner_id], references: [id])

  created_at DateTime  @default(now()) @db.Timestamptz(5)
  updated_at DateTime? @updatedAt @db.Timestamptz(5)
  deleted_at DateTime? @db.Timestamptz(5)

  @@map("tariff")
}

model Service {
  id             Int     @id @default(autoincrement())
  title          String
  description_uz String?
  description_ru String?
  description_en String?

  created_at DateTime  @default(now()) @db.Timestamptz(5)
  updated_at DateTime? @updatedAt @db.Timestamptz(5)
  deleted_at DateTime? @db.Timestamptz(5)

  @@map("service")
}

model Sims {
  id          Int     @id @default(autoincrement())
  title       Json
  description Json
  image       String?

  partner_id Int
  partner    Partner @relation(fields: [partner_id], references: [id])

  request  Json
  response Json

  created_at DateTime  @default(now()) @db.Timestamptz(5)
  updated_at DateTime? @updatedAt @db.Timestamptz(5)
  deleted_at DateTime? @db.Timestamptz(5)

  @@map("sims")
}

model Partner {
  id          Int     @id @default(autoincrement())
  title       Json
  description Json
  image       String?

  sims   Sims[]
  Tariff Tariff[]

  created_at DateTime  @default(now()) @db.Timestamptz(5)
  updated_at DateTime? @updatedAt @db.Timestamptz(5)
  deleted_at DateTime? @db.Timestamptz(5)

  @@map("partner")
}

model Error {
  id      Int  @id @default(autoincrement())
  code    Int
  message Json

  created_at DateTime  @default(now()) @db.Timestamptz(5)
  updated_at DateTime? @updatedAt @db.Timestamptz(5)
  deleted_at DateTime? @db.Timestamptz(5)

  @@map("error")
}
